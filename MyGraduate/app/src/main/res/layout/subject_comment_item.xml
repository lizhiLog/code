<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/resourceItemLayout"
        android:padding="10dp"
        android:background="#33003456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagePhoto"
            android:background="@drawable/ic_test"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/author"
            android:text="李志"
            android:layout_toRightOf="@id/imagePhoto"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#5C5C5C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/content"
            android:text="期末好好复习"
            android:layout_below="@id/imagePhoto"
            android:layout_margin="5dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:id="@+id/subjectRatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:scrollbarStyle="insideOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/author"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/content"
            android:isIndicator="true"
            android:numStars="5"/>

        <TextView
            android:id="@+id/date"
            android:text="2015-02-23 12:12 "
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/subjectRatingBar"
            android:gravity="bottom"
            android:layout_below="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>