<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/subjectItemLayout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/subjectImage"
            android:background="@drawable/ic_test"
            android:layout_width="90dp"
            android:layout_height="100dp"/>


        <TextView
            android:id="@+id/subjectScore"
            android:text="5.6"
            android:textSize="20sp"
            android:textColor="#FF4500"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/subjectName"
            android:text="奔跑吧兄弟"
            android:layout_toRightOf="@id/subjectImage"
            android:layout_toLeftOf="@id/subjectScore"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="#5C5C5C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/author"
            android:text="王劲华"
            android:layout_below="@id/subjectName"
            android:layout_alignLeft="@id/subjectName"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/schoolAndAcademy"
            android:text="华中师范大学 计算机学院"
            android:layout_below="@id/author"
            android:layout_alignLeft="@id/subjectName"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detail"
            android:text="详情"
            android:layout_alignBottom="@id/subjectImage"
            android:textSize="15sp"
            android:textColor="#63B8FF"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/describe"
            android:text="披着熊皮的啥白天..."
            android:layout_alignLeft="@id/subjectName"
            android:layout_toLeftOf="@id/detail"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@id/subjectImage"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>