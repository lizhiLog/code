<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.meizu.lizhi.mygraduation.main.student.subject.SubjectDetailActivity">

    <RelativeLayout
        android:id="@+id/detailLayout"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="#4476EEC6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:background="@drawable/ic_test"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/author"
            android:text="王劲华"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/schoolAndAcademy"
            android:text="华中师范大学 计算机学院"
            android:layout_below="@id/author"
            android:layout_alignLeft="@id/author"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:id="@+id/subjectRatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:scrollbarStyle="insideOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/author"
            android:layout_marginTop="3dp"
            android:layout_below="@id/schoolAndAcademy"
            android:isIndicator="true"
            android:numStars="5"/>

        <TextView
            android:id="@+id/subjectScore"
            android:text="5.6分"
            android:layout_toRightOf="@id/subjectRatingBar"
            android:layout_alignBottom="@id/subjectRatingBar"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/describe"
            android:text=" 简介斯蒂芬大幅度vdd大幅度放到大幅度放到大幅度放到大幅度翻速度缩放"
            android:textSize="13sp"
            android:layout_below="@id/image"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/studentNum"
        android:text="学生人数(123)"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/detailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/comment"
        android:background="@drawable/comment"
        android:layout_below="@id/detailLayout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/commentNum"
        android:text="(123)"
        android:layout_margin="2dp"
        android:layout_below="@id/detailLayout"
        android:layout_toLeftOf="@id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/commentLayout"
        android:background="#33CDC9C9"
        android:layout_below="@id/studentNum"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/send"
            android:text="发送"
            android:textSize="11sp"
            android:padding="1dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <EditText
            android:id="@+id/commentEdit"
            android:layout_toLeftOf="@id/send"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="#55654364"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_marginTop="5dp"
        android:layout_below="@id/commentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
